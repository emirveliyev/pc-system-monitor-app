<UserControl x:Class="pc_system_monitor_app.Controls.CircularProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="100" MinWidth="100">
    <Grid>
        <Canvas x:Name="ArcCanvas" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="150"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">
            <TextBlock x:Name="ValueText" Text="0%" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="LabelText" Text="Label" FontSize="12" HorizontalAlignment="Center" Opacity="0.8" Foreground="White"/>
            <TextBlock x:Name="AvgText" Text="" FontSize="11" HorizontalAlignment="Center" Opacity="0.7" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>